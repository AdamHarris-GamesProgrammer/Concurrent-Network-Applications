<Window x:Class="UserClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserClient"
        mc:Ignorable="d"
        Title="WPF Chat Window" Height="450" Width="437.6">
    <Border Padding="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="343*"/>
                <RowDefinition Height="24*"/>
                <RowDefinition Height="33*"/>


            </Grid.RowDefinitions>

            <TextBox x:Name="MessageWindow" Grid.Row="0" Padding="2" Margin="5,0,4.2,9.2"/>


            <Grid Margin="5,343,5.2,0" Grid.RowSpan="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="InputField" Grid.Column="0" Background="LightGray"/>
                <Button x:Name="SubmitButton" Grid.Column="1" Margin="5 0 0 0">
                    <Label Content="Send&#xA;Message" HorizontalAlignment="Center"/>
                </Button>

            </Grid>
        </Grid>
    </Border>

</Window>
